{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "src/",
    "outDir": "public_html/ecrf/target/", // Change to target folder
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false, // Needed for tests
    "noEmit": true,
    "declaration": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "asIs"
        }
      }
    ]
  },
  "include": ["global.d.ts", "src", "__dummy__"],
  "exclude": ["node_modules", "dist", "build", "public_html/ecrf/target"]
}
